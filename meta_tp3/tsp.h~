#ifndef TSP_H
#define TSP_H

#include <string>
#include <vector>

namespace tsp{
  class City{
    public:
      City(std::string name, float x, float y);
      float x();
      float y();
      std::string name();
      float distance(City c);
    private:
      float x_,y_;
      std::string name_;
  };
  
  class Solution{
    public:
      Solution(std::vector<City> array,bool loop=true);
      float distance();
      bool loop();
      std::vector<City> cities();
      Solution neighbour(int i, int j);
      std::vector<Solution> neighbours();
    private:
      std::vector<City> cities_;
      bool loop_;
  };
};

#endif
